<% if (message) { %>
<div class="alert alert-success" role="alert">
	<%= message %>
</div>
<% } %>

<h1><%= user.display_name %>'s Spotify info</h1>

<p>ID: <%= user.id %></p>
<p>Email: <%= user.email %></p>
<p>Followers: <%= JSON.stringify(user.followers) %></p>
<p>URI: <%= user.uri %></p>

<p>
	<img src="<%= user.images[0].url %>" width="200" />
</p>

<p>
	<a href="/login" class="btn btn-primary" role="button">Test cached token by going back to /start</a>
</p>

<p>
	<a href="/logout" class="btn btn-danger" role="button">Logout - remove token and restart login flow</a>
</p>